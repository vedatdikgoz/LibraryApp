@model LibraryApp.Entities.Concrete.Book
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container py-3">
    <div class="row">
        <div class="mx-auto col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Kitap Ekleme</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Kitap Adı</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="text" asp-for="BookName">
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Yazar</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="text" asp-for="Author">
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="ImageUrl" class="col-sm-2 col-form-label">Resim Ekle</label>
                            <div class="col-sm-10">
                                <input type="hidden" asp-for="ImageUrl" />
                                <input type="file" name="file" />
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

